#!/bin/sh
if [ -r /etc/friendlyelec-release ]; then
  . /etc/friendlyelec-release
  if [ "_$BOARDFAMILY" = "_" ]; then
    cpu="$LINUXFAMILY"
  else
    cpu="$BOARDFAMILY"
  fi
  cpu=$(echo "$cpu" | sed s/Allwinner//g | sed s/Family//g)
  echo "$cpu"
  exit 0
fi

if [ -r /etc/armbian-release ]; then
  . /etc/armbian-release
  if [ "_$BOARDFAMILY" = "_" ]; then
    cpu="$LINUXFAMILY"
  else
    cpu="$BOARDFAMILY"
  fi
  echo "$cpu"
  exit 0
fi

cpu=$(cat /proc/cpuinfo | awk '/Hardware/ { print $3 }' | tr '[:upper:]' '[:lower:]')
echo "$cpu"
